@model Mazadaty.Web.Models.Home.BuyNowModel

@{
    ViewBag.Title = Global.BuyNow;
}

@using (Html.BeginForm(null, null, FormMethod.Get, new { @class = "form-inline form-search" }))
{
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-search"></i></span>
            <input name="q" type="text" class="form-control" style="min-width: 400px;" placeholder="@Global.BuyNowSearchPlaceholder" value="@Model.Search" />       
        </div>
        @Html.DisplayFor(m => m.CategoryList)
    </div>
}

@if (!Model.Auctions.Any())
{
    <div class="alert alert-warning">@Global.NoBuyNowWarning</div>
}

<ol id="closed-auctions">
    @foreach (var auction in Model.Auctions)
    {
        <li>@Html.DisplayFor(i => auction, "BuyNowTile")</li>
    }
</ol>
