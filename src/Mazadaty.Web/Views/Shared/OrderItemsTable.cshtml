@using Mazadaty.Core.Formatting
@model Mazadaty.Web.Models.Order.OrderViewModel

<table id="cart-table" class="@Html.Css().LayoutTable">
    <thead>
        <tr>
            <th class="force-bg-print">@Global.Product</th>
            <th class="force-bg-print">@Global.Price</th>
            <th class="force-bg-print">@Global.Quantity</th>
            <th class="force-bg-print">@Global.Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td><strong>@item.Name</strong></td>
                <td>@CurrencyFormatter.Format(item.ItemPrice)</td>
                <td>@item.Quantity</td>
                <td>@CurrencyFormatter.Format(item.TotalPrice)</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3" class="text-right">@Global.Subtotal</th>
            <th>@CurrencyFormatter.Format(Model.Subtotal)</th>
        </tr>
        <tr>
            <th colspan="3" class="text-right">@Global.Shipping</th>
            <th id="order-shipping-value">@CurrencyFormatter.Format(Model.Shipping)</th>
        </tr>
        <tr>
            <th colspan="3" class="text-right">@Global.Total</th>
            <th id="order-total-value">@CurrencyFormatter.Format(Model.Total)</th>
        </tr>
    </tfoot>
</table>
