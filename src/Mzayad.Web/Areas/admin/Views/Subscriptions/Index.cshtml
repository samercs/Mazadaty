@using Humanizer
@using Mzayad.Core.Formatting
@using Mzayad.Web.Extensions
@model IEnumerable<Mzayad.Models.Subscription>

@{
    ViewBag.Title = "Subscriptions List";
}

<ul class="link-list">
    <li>@Html.ActionLink("Add Subscription", "Add", "Subscriptions")</li>
</ul>

@if (!Model.Any())
{
    <div class="alert alert-warning">There are currently no subscriptions.</div>
    return;
}

<table class="@Html.Css().GridTable">
    <thead>
        <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Price (KD)</th>
            <th>Price (tokens)</th>
            <th>Expiration</th>
            <th>Quantity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Status.Humanize()</td>
                <td>@CurrencyFormatter.Format(item.PurchasePrice)</td>
                <td>@item.PurchaseTokens</td>
                <td>@(item.ExpirationUtc.HasValue ? item.ExpirationUtc.Value.ToShortDateString() : "")</td>
                <td>@item.Quantity</td>
                <td class="link-cell">@Html.ActionLink("Edit", "Edit", "Subscriptions", new { id = item.SubscriptionId }, null)</td>
            </tr>
        }
    </tbody>
</table>
