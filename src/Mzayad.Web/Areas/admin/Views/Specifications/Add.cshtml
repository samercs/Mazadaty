@using Mzayad.Web.Extensions
@model Mzayad.Web.Areas.admin.Models.Specification.AddViewModel

@{
    ViewBag.Title = "Add New Specification";
    
}

<div class="row">
    <div class="@Html.Css().FormNarrow">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <section>
                <div class="form-group">
                    @Html.LabelFor(i => i.Specification.Name, "Name")
                    @Html.EditorFor(i => i.Specification.Name,Model.Specification)
                    @Html.ValidationMessageFor(m => m.Specification.Name, "Please enter a specification name.")
                </div>
                
            </section>

            <section class="form-buttons">
                <button type="submit" class="btn btn-default">Save And Continue</button>
            </section>
        }
    </div>
</div>

@section scripts {
    @Scripts.Render("~/js/validate")
}


