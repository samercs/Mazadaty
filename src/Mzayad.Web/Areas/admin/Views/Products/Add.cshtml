@using Mzayad.Web.Extensions
@model Mzayad.Web.Areas.admin.Models.Products.AddViewModel


@{
    ViewBag.Title = "Add Product";

}

<div class="row">
    <div class="@Html.Css().FormWide">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <section>
                <div class="form-group">
                    @Html.LabelFor(i => i.Product.Name, "Name")
                    @Html.EditorFor(i => i.Product.Name, Model)
                    @Html.ValidationMessageFor(i => i.Product.Name, "Please enter a product name.")
                </div>

                
            </section>

            @Html.HiddenFor(i => i.Product.Description)

            <section class="form-buttons">
                <button type="submit" class="btn btn-default">Save And Continue</button>
            </section>
        }
    </div>
</div>

@section scripts {
    @Scripts.Render("~/js/validate")
    

}