@using System.Web.Mvc.Html
@model Mzayad.Web.Models.Shared.AddressViewModel

<div class="form-group">
    @Html.LabelFor(m => m.CityArea, Global.Area).Required()
    @Html.TextBoxFor(m => m.CityArea, new { @class = "form-control kuwait-area" })
    @Html.ValidationMessageFor(m => m.CityArea, Global.AreaRequiredErrorMessage)
</div>

