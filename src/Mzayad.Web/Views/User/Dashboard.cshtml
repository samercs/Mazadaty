@using Mzayad.Core.Formatting
@using Mzayad.Models.Enum
@using OrangeJetpack.Base.Core.Formatting
@model Mzayad.Web.Models.User.DashboardViewModel
@{
    ViewBag.Title = Global.Dashboard;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title" style="display: inline-block">Account</h3>
        <div class="pull-right"><a href="@Url.Action("EditAccount")"><small>@Global.EditAccount</small></a></div>
    </div>
    <div class="panel-body form-horizontal">
        
        <div class="form-group">
            <label class="col-sm-2 control-label">Username</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.ApplicationUser.UserName</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Contact</label>
            <div class="col-sm-10">
                <ul class="form-control-static list-unstyled">
                    <li>@NameFormatter.GetFullName(Model.ApplicationUser.FirstName, Model.ApplicationUser.LastName)</li>
                    <li>@Model.ApplicationUser.Email</li>
                    <li>@PhoneNumberFormatter.Format(Model.ApplicationUser.PhoneCountryCode, Model.ApplicationUser.PhoneNumber)</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title" style="display: inline-block">Profile</h3>
        <div class="pull-right"><a href="@Url.Action("EditProfile")"><small>@Global.EditProfile</small></a></div>
    </div>
    <div class="panel-body form-horizontal">     
        <div class="form-group">
            <div class="col-sm-2">
                <img class="img-responsive" src="@Model.UserProfile.Avatar.Url" alt="responsive" />
            </div>
            <div class="col-sm-10">
                @switch (Model.UserProfile.Status)
                {
                    case UserProfileStatus.Private:
                        <p class="form-control-static">Your profile is currently <strong class="text-no"><i class="fa fa-lock"></i> PRIVATE</strong> and hidden from other users.</p>
                        break;
                    case UserProfileStatus.Public:
                        <p class="form-control-static">Your profile is currently <strong class="text-yes"><i class="fa fa-unlock"></i> PUBLIC</strong> and visible to other Mzayad users.</p>
                        break;
                }
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title" style="display: inline-block">Bid History</h3>
    </div>
    <div class="panel-body form-horizontal">


    </div>
</div>