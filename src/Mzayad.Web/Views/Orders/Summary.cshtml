@using Mzayad.Core.Formatting
@using Mzayad.Models.Enum
@using OrangeJetpack.Localization
@model Mzayad.Web.Models.Order.OrderSummaryViewModel

@{
    ViewBag.Title = Global.OrderSummary;
}

@using (Html.BeginForm("Submit", "Orders", new { orderId = Model.Order.OrderId }, FormMethod.Post, new { @class = "submit-once" }))
{
    @Html.AntiForgeryToken()
    
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@Global.OrderDetails</h3>
        </div>
        <div class="panel-body form-horizontal">
            @foreach (var item in Model.Order.Items)
            {
                <div class="form-group">
                    <label class="col-sm-2 control-label">@Global.ItemName</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">
                            @item.Localize(Model.Language, i => i.Name).Name
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@Global.ItemPrices</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">
                            @CurrencyFormatter.Format(item.ItemPrice)
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@Global.Quantity</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">
                            @item.Quantity
                        </p>
                    </div>
                </div>
                <hr />
            }
            <div class="form-group">
                <label class="col-sm-2 control-label">@Global.Shipping</label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        @CurrencyFormatter.Format(Model.Order.Shipping)
                    </p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Global.Total</label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        @CurrencyFormatter.Format(Model.Order.Total)
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@Global.ShippingAddress</h3>
        </div>
        <div class="panel-body form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">@Global.Name</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Order.Address.Name</p>
                </div>
                <label class="col-sm-2 control-label">@Global.Address</label>
                <div class="col-sm-10">
                    @Html.DisplayFor(m => Model.Order.Address)
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@Global.PaymentMethod</h3>
        </div>
        <div class="panel-body form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">@Global.PaymentMethod</label>
                <div class="col-sm-10">
                    <div class="radio">
                        <label>
                            @Html.RadioButtonFor(m => m.Order.PaymentMethod, PaymentMethod.Knet)
                            <img src="//az712326.vo.msecnd.net/assets/payment-cards-knet-635584921087649461.png" alt="KNET"/>
                        </label>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <section class="form-buttons">
        <button type="submit" class="btn btn-default" data-submitting-text="@Global.SubmittingPleaseWait">@Global.SaveAndContinue</button>
    </section>
}