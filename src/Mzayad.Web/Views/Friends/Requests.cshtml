@using OrangeJetpack.Base.Web

@model Mzayad.Web.Models.User.FriendRequestsViewModel

@{
    ViewBag.Title = Global.FriendRequests;
}

@if (!Model.OthersRequests.Any())
{
    @Html.StatusMessage(Global.NoFriendRequests, StatusMessageType.Information)
    return;
}

<div id="dvMessage"></div>
@if (Model.OthersRequests.Any())
{
    <div class="panel dashboard-panel">
        <div class="panel-heading">
            <h3 class="panel-title text-uppercase">@Global.FriendRequests</h3>
            <div class="clearfix"></div>
        </div>
        <div class="panel-body">
            @foreach (var request in Model.OthersRequests)
                {
                <div class="row" style="border-bottom:1px solid #f1f1f1;margin-bottom:10px;padding-bottom:10px;" id="dv_@request.FriendRequestId">
                    <div class="col-sm-1">
                        <div class="dashboard-avatar">
                            <img class="img-responsive" src="@request.User.AvatarUrl" alt="@request.User.UserName" />
                        </div>
                    </div>
                    <div class="col-sm-9">
                        <div id="dashboard-details" class="dashboard-cell" style="padding:0px;">
                            <div id="dashboard-username" class="text-uppercase">
                                <a href="@Url.Content("~/"+ LanguageCode+ "/profiles/"+request.User.UserName)">@request.User.UserName</a>
                            </div>
                            <button type="button" class="btn btn-link" style="padding:0px;" onclick="decide(@request.FriendRequestId,'@((int)Mzayad.Models.Enums.FriendRequestStatus.Accepted)')">@Global.Accept</button>
                            <button type="button" class="btn btn-link" style="margin:0px 20px;padding:0px;" onclick="decide(@request.FriendRequestId,'@((int)Mzayad.Models.Enums.FriendRequestStatus.Declined)')">@Global.Decline</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
@section styles{
    <link rel="stylesheet" href="//cdn.jsdelivr.net/alertifyjs/1.8.0/css/alertify.min.css" />
    <link rel="stylesheet" href="//cdn.jsdelivr.net/alertifyjs/1.8.0/css/themes/bootstrap.min.css" />
}
@section scripts
{
    <script src="//cdn.jsdelivr.net/alertifyjs/1.8.0/alertify.min.js"></script>

    <script>
        function decide(id, status) {
            alertify.confirm("@Global.AreSure",
                                   function () {
                                       save(id, status);
                                   },
                                   function () {

                                   })
                               .set('labels', { ok: '@Global.Yes', cancel: '@Global.No' }).setHeader(status == 2 ? '@Global.AcceptFriendRequest' : '@Global.DeclineFriendRequest');;
        }


        function save(id, status) {
            $.ajax({
                url: '@Url.Content("~/friends/updaterequest")',
                type: 'POST',
                data: { 'requestId': id, 'status': status },
                dataType: 'json',
                success: function () {
                    $('#dvMessage').html('@Html.Raw(Html.StatusMessage(Global.FriendActionSuccessMessage, StatusMessageType.Success).ToString().Replace("'","\""))');
                    $('#dv_' + id).hide();
                },
                error: function () {
                    $('#dvMessage').html('@Html.Raw(Html.StatusMessage(Global.FriendActionFailMessage, StatusMessageType.Error).ToString().Replace("'","\""))');
                }
            });
        }
    </script>
}


